pipeline {
    agent any

    parameters {
        string(name: 'VERSION', description: 'Enter the APP VERSION')
    }

    environment {
        AWS_ACCOUNT_ID = "124355663661"
        REGION = "ap-northeast-2"
        REPO_URI = "${AWS_ACCOUNT_ID}.dkr.ecr.${REGION}.amazonaws.com/devops"
        DOCKER_IMAGE = "devsecops-example-app:${VERSION}"
        DOCKER_REGISTRY = 'docker.io'
        DOCKER_REGISTRY_CREDENTIALS = 'docker-cred'
    }

    stages {
        stage('Clone') {
            steps {
                echo 'Cloning the GitHub repository...'
                git url: 'https://github.com/Msocial123/fss-Retail-App_kubernetes.git', branch: 'master'
            }
        }

        stage('Docker Build') {
            steps {
                echo "Building Docker image ${DOCKER_IMAGE}..."
                sh "docker build -t ${DOCKER_IMAGE} ."
            }
        }

        stage('Trivy Image Scan') {
            steps {
                echo "üîç Scanning Docker image for vulnerabilities..."

                // Trivy scan with table format for better readability
                sh '''
                    trivy image --format table --severity HIGH,CRITICAL --no-progress ${DOCKER_IMAGE} > trivy-scan.txt
                    echo "========== Filtered Vulnerabilities (CRITICAL, HIGH) =========="
                    cat trivy-scan.txt
                '''
                
                archiveArtifacts artifacts: 'trivy-scan.txt', onlyIfSuccessful: true
            }
        }

        stage('Handle Vulnerabilities') {
            steps {
                script {
                    echo "üõë Checking for vulnerabilities..."

                    def trivyResults = readFile('trivy-scan.txt')
                    def highSeverityCount = trivyResults.findAll { it.contains('HIGH') }.size()
                    def criticalSeverityCount = trivyResults.findAll { it.contains('CRITICAL') }.size()

                    if (criticalSeverityCount > 0 || highSeverityCount > 0) {
                        error "The Docker image contains HIGH or CRITICAL vulnerabilities. Please fix them before proceeding."
                    } else {
                        echo "‚úÖ No critical or high vulnerabilities found. Proceeding with push to registries."
                    }
                }
            }
        }

        stage('Push to ECR') {
            steps {
                script {
                    withAWS(credentials: 'aws-devops', region: "${REGION}") {
                        echo "Pushing Docker image to AWS ECR..."
                        sh """
                            aws ecr get-login-password --region ${REGION} | docker login --username AWS --password-stdin ${REPO_URI}
                            docker tag ${DOCKER_IMAGE} ${REPO_URI}:${VERSION}
                            docker push ${REPO_URI}:${VERSION}
                        """
                    }
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                withCredentials([usernamePassword(credentialsId: "${DOCKER_REGISTRY_CREDENTIALS}", passwordVariable: 'DOCKER_PASSWORD', usernameVariable: 'DOCKER_USERNAME')]) {
                    echo "Pushing Docker image to Docker Hub..."
                    sh """
                        docker login -u ${DOCKER_USERNAME} -p ${DOCKER_PASSWORD}
                        docker tag ${DOCKER_IMAGE} muralisocial123/${DOCKER_IMAGE}
                        docker push muralisocial123/${DOCKER_IMAGE}
                    """
                }
            }
        }

        stage('Run Docker Compose') {
            steps {
                echo "Starting containers using Docker Compose..."
                sh "docker-compose up -d"
            }
            post {
                success {
                    echo "‚úÖ Docker containers started successfully."
                }
                failure {
                    echo "‚ùå Failed to start Docker containers."
                }
            }
        }

        stage('Cleanup') {
            steps {
                echo "Cleaning up old Docker images and containers..."
                sh "docker system prune -af"
            }
        }
    }

    post {
        always {
            echo "Cleaning up resources..."
            cleanWs()
        }
    }
}


------------------------

pipeline {
    agent any

    parameters {
        string(name: 'VERSION', description: 'Enter the APP VERSION')
    }

    environment {
        AWS_ACCOUNT_ID = "124355663661"
        REGION = "ap-northeast-2"
        REPO_URI = "${AWS_ACCOUNT_ID}.dkr.ecr.${REGION}.amazonaws.com/devops"
        DOCKER_IMAGE = "devsecops-example-app:${VERSION}"
        DOCKER_REGISTRY = 'docker.io'
        DOCKER_REGISTRY_CREDENTIALS = 'docker-cred'
    }

    stages {
        stage('Clone') {
            steps {
                echo 'üîÅ Cloning the GitHub repository...'
                git url: 'https://github.com/Msocial123/fss-Retail-App_kubernetes.git', branch: 'master'
            }
        }

        stage('Docker Build') {
            steps {
                echo "üê≥ Building Docker image ${DOCKER_IMAGE}..."
                sh "docker build -t ${DOCKER_IMAGE} ."
            }
        }

        stage('Trivy Image Scan') {
            steps {
                echo "üîç Scanning Docker image for vulnerabilities..."
                sh """
                    trivy image --format table --severity HIGH,CRITICAL --no-progress ${DOCKER_IMAGE} > trivy-scan.txt

                    echo "========== Vulnerability Summary =========="
                    cat trivy-scan.txt

                    # Count vulnerabilities
                    HIGH_COUNT=\$(grep -c 'HIGH' trivy-scan.txt || true)
                    CRITICAL_COUNT=\$(grep -c 'CRITICAL' trivy-scan.txt || true)

                    echo "Found \$HIGH_COUNT HIGH and \$CRITICAL_COUNT Critical vulnerabilities."

                    if [ "\$CRITICAL_COUNT" -gt 0 ] || [ "\$HIGH_COUNT" -gt 0 ]; then
                        echo "‚ùå Pipeline blocked due to HIGH/CRITICAL vulnerabilities"
                        exit 1
                    else
                        echo "‚úÖ No blocking vulnerabilities found"
                    fi
                """
                archiveArtifacts artifacts: 'trivy-scan.txt', onlyIfSuccessful: true
            }
        }

        stage('Push to ECR') {
            steps {
                script {
                    withAWS(credentials: 'aws-devops', region: "${REGION}") {
                        sh """
                            aws ecr get-login-password --region ${REGION} | docker login --username AWS --password-stdin ${REPO_URI}
                            docker tag ${DOCKER_IMAGE} ${REPO_URI}:${VERSION}
                            docker push ${REPO_URI}:${VERSION}
                        """
                    }
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                withCredentials([usernamePassword(credentialsId: "${DOCKER_REGISTRY_CREDENTIALS}", passwordVariable: 'DOCKER_PASSWORD', usernameVariable: 'DOCKER_USERNAME')]) {
                    sh """
                        docker login -u ${DOCKER_USERNAME} -p ${DOCKER_PASSWORD}
                        docker tag ${DOCKER_IMAGE} muralisocial123/${DOCKER_IMAGE}
                        docker push muralisocial123/${DOCKER_IMAGE}
                    """
                }
            }
        }

        stage('Run Docker Compose') {
            steps {
                echo "üöÄ Starting containers using Docker Compose..."
                sh "docker-compose up -d"
            }
            post {
                success {
                    echo "‚úÖ Docker containers started successfully."
                }
                failure {
                    echo "‚ùå Failed to start Docker containers."
                }
            }
        }
    }
}
